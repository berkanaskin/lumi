# Lumi Environment Variables
# Copy this file to .env and fill in your API keys

# TMDB API - Movie/TV database
VITE_TMDB_API_KEY=your_tmdb_api_key_here

# YouTube Data API - Trailers
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini AI - Recommendations
# ⚠️ WARNING: In production, this should be stored on backend only!
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase (optional - for auth)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_project_id_here

# RevenueCat (optional - for payments)
REVENUECAT_API_KEY=your_revenuecat_key_here
